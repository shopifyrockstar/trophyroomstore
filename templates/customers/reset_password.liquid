<div class="shopify-section section-w-margin section-w-mobile-padding" id="section-reset-password">

  <div class="section-header five-tenths lap--full-width push-left-one-tenth lap--push-left-none">
    <h1 class="section-header__title h1">{{ 'customer.reset_password.title' | t }}</h1>
    <span class="h4" style="margin-bottom:2em">{{ 'customer.reset_password.subtext' | t: email: email }}</span>
  </div>

  <div class="grid">

    <div class="six-tenths lap--full-width push-left-one-tenth lap--push-left-none">

      {%- form 'reset_customer_password', class: 'simple-grid' -%}

    		<div class="simple-grid-item one-whole">{%- render 'form-errors', form: form -%}</div>

        <div class="simple-grid-item one-whole">
          <label for="ResetPassword" class="text-size--small">{{ 'customer.reset_password.password' | t }}</label>
          <input type="password" value="" name="customer[password]" id="ResetPassword" class="input-full{% if form.errors contains 'password' %} error{% endif %}">
        </div>
        
        <div class="simple-grid-item one-whole">
          <label for="PasswordConfirmation" class="text-size--small">{{ 'customer.reset_password.password_confirm' | t }}</label>
          <input type="password" value="" name="customer[password_confirmation]" id="PasswordConfirmation" class="input-full{% if form.errors contains 'password_confirmation' %} error{% endif %}">
        </div>

        <div class="simple-grid-item one-whole">
          <input type="submit" class="button button--solid button--fit" value="{{ 'customer.reset_password.submit' | t }}">
        </div>

      {%- endform -%}

    </div>

  </div>

</div>